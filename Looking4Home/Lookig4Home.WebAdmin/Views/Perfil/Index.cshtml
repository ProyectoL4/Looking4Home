    <!-- partial:index.partial.html -->
    <div class="login-wrap" id="myID">
        <div class="login-html" id="myID">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Perfil</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Mas Detalles</label>
            <div class="login-form">

                <!-----------------------MOSTRAR NOMBRE Y FOTO DE USUARIO------------------------->

                @if (Request.IsAuthenticated)
                {
                    var ident = (FormsIdentity)HttpContext.Current.User.Identity;
                    var ticket = ident.Ticket;
                    var usuario = Newtonsoft.Json.JsonConvert.DeserializeObject<Looking4Home.BL.Usuario>(ticket.UserData);

                    if (usuario.UrlImagen == null)
                    {
                        <div class="sign-in-htm">
                            <div class="group-unico" style="">
                                <img class="img" src="./assets/img/usuario.png">
                            </div>
                            <div class="group">
                                <label for="user" class="label">Nombre de Usuario</label>
                                <input id="user" type="submit" class="input" value="@usuario.NombUsuario">
                            </div>
                            <div class="group">
                                <label for="UserPassword" class="label"><i class="fas fa-key"></i> Contraseña</label>
                                <input id="UserPassword" readonly type="password" class="input" value="@usuario.Contrasena2">
                            </div>
                            <div class="group">
                                <input id="check" type="checkbox" class="check" onclick="myFunction2()">
                                <label for="check"><span style="background: rgba(0, 0, 0, 0.39);" class="icon"></span> Mostrar Contraseña</label>
                            </div>


                            @if (usuario.NombUsuario == "admin")
                            {

                                <div class="group">
                                    @Html.ActionLink("Crear Nuevo Usuario", "Crear")
                                </div>

                            }

                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <a href="#">Todo esta en Orden</a>
                            </div>
                        </div>

                        <!-----------SEGUNDA PARTE---------->

                        <div class="sign-up-htm">
                            <div class="group">
                                <label for="user" class="label">Nombre</label>
                                <input id="user" type="submit" class="input" value="@usuario.Nombre @usuario.Apellido">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Cedula</label>
                                <input id="pass" type="submit" class="input" value="@usuario.Cedula">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Edad</label>
                                <input id="pass" type="submit" class="input" value="@usuario.edad">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Fecha de Inicio</label>
                                <input id="pass" type="submit" class="input" value="@usuario.FechaInicio">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Correo Electronico</label>
                                <input id="pass" type="submit" class="input" value="@usuario.Correo">
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Editar Perfil">
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <label for="tab-1">Looking 4 HOME is LIVE</label>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="sign-in-htm">
                            <div class="group-unico" style="">
                                <img class="img" src="@usuario.UrlImagen">
                            </div>
                            <div class="group">
                                <label for="user" class="label">Nombre de Usuario</label>
                                <input id="user" type="submit" class="input" value="@usuario.NombUsuario">
                            </div>
                            <div class="group">
                                <label for="UserPassword" class="label"><i class="fas fa-key"></i> Contraseña</label>
                                <input  id="UserPassword" readonly type="password" class="input" value="@usuario.Contrasena2">
                            </div>
                            <div class="group">
                                <input id="check" type="checkbox" class="check" onclick="myFunction2()" >
                                <label for="check"><span style="background: rgba(0, 0, 0, 0.39);" class="icon"></span> Mostrar Contraseña</label>
                            </div>


                            @if (usuario.NombUsuario == "admin")
                            {

                                <div class="group">
                                    @Html.ActionLink("Crear Nuevo Usuario", "Crear",null, new { @class = "button", @type = "submit", @style="text-align: center;" })
                                </div>

                            }

                            <div class="hr"></div>
                            
                            @if (usuario.NombUsuario == "admin")
                            {
                            <div class="foot-lnk">
                                @Html.ActionLink("Mostrar todos los Usuarios", "Index2")
                            </div>
                            }
                        </div>

                        <!-----------SEGUNDA PARTE---------->

                        <div class="sign-up-htm">
                            <div class="group">
                                <label for="user" class="label">Nombre</label>
                                <input id="user" type="submit" class="input" value="@usuario.Nombre @usuario.Apellido">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Cedula</label>
                                <input id="pass" type="submit" class="input" value="@usuario.Cedula">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Edad</label>
                                <input id="pass" type="submit" class="input" value="@usuario.edad">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Fecha de Inicio</label>
                                <input id="pass" type="submit" class="input" value="@usuario.FechaInicio">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Correo Electronico</label>
                                <input id="pass" type="submit" class="input" value="@usuario.Correo">
                            </div>
                            <div class="group">
                                @Html.ActionLink("Editar Perfil", "Editar", new { id = usuario.Id }, new { @class = "button", @type = "submit", @style = "text-align: center;" })
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <label for="tab-1">Looking 4 HOME is LIVE</label>
                            </div>
                        </div>

                    }

                }
                else
                {
                    <div class="sign-in-htm">
                        <div class="group-unico" style="">
                            <img class="img" src="./assets/img/usuario.png">
                        </div>
                        <div class="group">
                            <label for="user" class="label">Nombre de Usuario</label>
                            <input id="user" type="text" class="input" placeholder="Visitante">
