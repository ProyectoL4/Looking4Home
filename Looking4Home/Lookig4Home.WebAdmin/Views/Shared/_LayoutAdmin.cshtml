<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>@ViewBag.Title - Inicio</title>
    <!-- Normalize V8.0.1 -->
    <link rel="stylesheet" href="~/css/normalize.css">
    <!-- Bootstrap V4.3 -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Bootstrap Material Design V4.0 -->
    <link rel="stylesheet" href="~/css/bootstrap-material-design.min.css">
    <!-- Font Awesome V5.9.0 -->
    <link rel="stylesheet" href="~/css/all.css">
    <!-- Sweet Alerts V8.13.0 CSS file -->
    <link rel="stylesheet" href="~/css/sweetalert2.min.css">
    <!-- Sweet Alert V8.13.0 JS file-->
    <script src="~/js/sweetalert2.min.js"></script>
    <!-- jQuery Custom Content Scroller V3.1.5 -->
    <link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.css">
    <!-- General Styles -->
    <link rel="stylesheet" href="~/css/style.css">


</head>
<body>
    <!-- Main container -->
    <main class="full-box main-container">
        <!-- Nav lateral -->
        <section class="full-box nav-lateral">
            <div class="full-box nav-lateral-bg show-nav-lateral"></div>
            <div class="full-box nav-lateral-content">
                <figure class="full-box nav-lateral-avatar">
                    <i class="far fa-times-circle show-nav-lateral"></i>
                    <img src="~/Imagenes/logop.png" class="rounded-circle" alt="Avatar">
                    <figcaption class="roboto-medium text-center">
                        Looking 4 Home <br><small class="roboto-condensed-light">Inicio</small>
                    </figcaption>
                </figure>
                <div class="full-box nav-lateral-bar"></div>
                <nav class="full-box nav-lateral-menu">
                    <ul>
                        <li>
                            <a href="/"><i class="fab fa-dashcube fa-fw"></i> &nbsp; Inicio</a>
                        </li>
                        <li>
                            <a href="/Productos"><i class="fas fa-store-alt fa-fw"></i> &nbsp; Productos </i></a>
                        </li>
                        <li>
                            <a href="/Categorias"><i class="fas fa-pallet fa-fw"></i> &nbsp; Categorias </i></a>
                        </li>
                        <li>
                            <a href="/Estructuras"><i class="fas fa-store-alt fa-fw"></i> &nbsp; Estructuras </i></a>
                        </li>
                        <li>
                            <a href="/Clientes"><i class="fa fa-id-card" aria-hidden="true"></i> &nbsp; Clientes </a>
                        </li>
                        <li>
                            <a href="/Vendedores"><i class="fa fa-briefcase" aria-hidden="true"></i> &nbsp; Vendedores</a>
                        </li>
                        <li>
                            <a href="/Ordenes"><i class="fa fa-truck" aria-hidden="true"></i> &nbsp; Ordenes</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </section>
        <!-- Page content -->
        <section class="full-box page-content">
            <nav class="full-box navbar-info">
                <a href="#" class="float-left show-nav-lateral">
                    <i class="fas fa-exchange-alt"></i>
                </a>
                <div class="dropdown pull-right">
                    <button class="fas fa-power-off" data-toggle="dropdown"></button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/Login"><i class="fas fa-power-off"></i>Salir</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Page header -->
            <div class="full-box page-header">
                <div>
                    @RenderBody()
                </div>
            </div>

            <!-- Content -->
            <div class="full-box tile-container">
            </div>
        </section>
    </main>


    <!--=============================================
    =            Include JavaScript files           =
    ==============================================-->
    <!-- jQuery V3.4.1 -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- popper -->
    <script src="~/js/popper.min.js"></script>
    <!-- Bootstrap V4.3 -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- jQuery Custom Content Scroller V3.1.5 -->
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <!-- Bootstrap Material Design V4.0 -->
    <script src="~/js/bootstrap-material-design.min.js"></script>
    <script>$(document).ready(function() { $('body').bootstrapMaterialDesign(); });</script>
    <script src="~/js/main.js"></script>
</body>
</html>