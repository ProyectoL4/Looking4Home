@model List<Looking4Home.BL.Producto>
@{
    ViewBag.Title = "Renta";
    Layout = "~/Views/Shared/_LayoutBusqueda.cshtml";
}

<!-- Search Result Section end -->
<section class="search-result-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 p-0" style="max-width: 40%;">
                <div class="search-result-map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14376.077865872314!2d-73.879277264103!3d40.757667781624285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sbd!4v1546528920522" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-xl-6 p-0" style="max-width: 60%;">
                <div class="search-results">
                    <!--INICIO-->


                    @foreach (var producto in Model.Where(r => r.Etiqueta.Descripcion == "Renta").Take(4).OrderBy(r => Guid.NewGuid()))
                    {

                        <div class="col-lg-9">
                            <div class="property-list">
                                <div class="single-property-item">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="property-pic">
                                                <img src="@(ViewBag.adminWebsiteUrl + producto.UrlImagen)" alt="">
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="property-text">
                                                <div class="s-text">@producto.Etiqueta.Descripcion</div>
                                                <h5 class="r-title">@producto.Localizacion</h5>
                                                <div class="room-price">
                                                    <span>Precio:</span>
                                                    <h5>@producto.Precio</h5>
                                                </div>
                                                <div class="properties-location">
                                                    <i class="icon_pin"></i> @producto.Localizacion
                                                </div>
                                                <p>
                                                    @producto.Descripcion
                                                </p>
                                                <ul class="room-features">
                                                    <li>
                                                        <i class="fa fa-arrows"></i>
                                                        <p>@producto.Metros</p><span>M2</span>
                                                    </li>
                                                    <li>
                                                        <i class="fa fa-bed"></i>
                                                        <p>@producto.Habitaciones</p><span>Habitaciones</span>
                                                    </li>
                                                    <li>
                                                        <i class="fa fa-bath"></i>
                                                        <p>@producto.Bano</p><span>Baños</span>
                                                    </li>
                                                    <li>
                                                        <i class="fa fa-car"></i>
                                                        <p>@producto.Parking</p><span>Estacionamiento</span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="property-pagination" style="padding-left: 20px">
                        <a href="/Mapa">1</a>
                        <a href="">2</a>
                        <a href="#">3</a>
                    </div>

                    <!--FINAL-->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Search Result Section end -->

<hr>

